pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Ensure Maven is available in PATH or use absolute path if necessary
                sh 'mvn clean package'
            }
        }

        stage('Unit and Integration Tests') {
            steps {
                sh 'mvn test'
                sh 'mvn verify'
            }
        }

        stage('Code Analysis') {
            steps {
                sh 'mvn sonar:sonar'
            }
        }

        stage('Security Scan') {
            steps {
                sh 'sonar-scanner'
            }
        }

        stage('Deploy to Staging') {
            steps {
                sh 'scp target/app.jar user@staging-server:/path/to/deploy'
            }
        }

        stage('Integration Tests on Staging') {
            steps {
                sh 'curl http://staging-server:8080/run-integration-tests'
            }
        }

        stage('Deploy to Production') {
            steps {
                sh 'scp target/app.jar user@production-server:/path/to/deploy'
            }
        }
    }

    post {
        always {
            emailext(
                to: 'dzassadcass@gmail.com',
                subject: "Build Status: ${currentBuild.currentResult}",
                body: "Build ${currentBuild.currentResult}. Logs: ${env.BUILD_URL}console",
                attachmentsPattern: '**/build.log',
                compressLog: true
            )
        }
    }
}
