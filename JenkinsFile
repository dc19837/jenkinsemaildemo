pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Build automation tool
                sh 'mvn clean package'
                // Tool: Maven
            }
        }

        stage('Unit and Integration Tests') {
            steps {
                // Run unit tests
                sh 'mvn test'
                // Run integration tests
                sh 'mvn verify'
                // Tool: Maven Surefire and Failsafe plugins
            }
        }

        stage('Code Analysis') {
            steps {
                // Perform code analysis
                sh 'mvn sonar:sonar'
                // Tool: SonarQube
            }
        }

        stage('Security Scan') {
            steps {
                // Perform security scan
                sh 'sonar-scanner'
                // Tool: SonarQube or OWASP Dependency-Check
            }
        }

        stage('Deploy to Staging') {
            steps {
                // Deploy to staging server
                sh 'scp target/app.jar user@staging-server:/path/to/deploy'
                // Tool: SCP
            }
        }

        stage('Integration Tests on Staging') {
            steps {
                // Run integration tests on staging environment
                sh 'curl http://staging-server:8080/run-integration-tests'
                // Tool: Custom API or test script
            }
        }

        stage('Deploy to Production') {
            steps {
                // Deploy to production server
                sh 'scp target/app.jar user@production-server:/path/to/deploy'
                // Tool: SCP
            }
        }
    }

    post {
        always {
            // Send notification emails
            emailext(
                to: 'dzassadcass@gmail.com',
                subject: "Build Status: ${currentBuild.currentResult}",
                body: "Build ${currentBuild.currentResult}. Logs: ${env.BUILD_URL}console",
                attachmentsPattern: '**/build.log',
                compressLog: true
            )
        }
    }
}
