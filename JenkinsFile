pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'echo "Building the code..."'
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                sh 'echo "Running unit and integration tests..."'
            }
        }
        stage('Code Analysis') {
            steps {
                sh 'echo "Analyzing the code..."'
            }
        }
        stage('Security Scan') {
            steps {
                sh 'echo "Scanning the code for vulnerabilities..."'
            }
        }
        stage('Deploy to Staging') {
            steps {
                sh 'echo "Deploying to staging..."'
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                sh 'echo "Running integration tests on staging..."'
            }
        }
        stage('Deploy to Production') {
            steps {
                sh 'echo "Deploying to production..."'
            }
        }
    }

    post {
        success {
            emailext (
                to: 'dzassadcass@gmail.com',
                subject: 'Pipeline Success',
                body: 'The pipeline has completed successfully.',
                attachmentsPattern: 'logs.txt'
            )
        }
        failure {
            emailext (
                to: 'dzassadcass@gmail.com',
                subject: 'Pipeline Failure',
                body: 'The pipeline has failed.',
                attachmentsPattern: 'logs.txt'
            )
        }
        unstable {
            emailext (
                to: 'dzassadcass@gmail.com',
                subject: 'Pipeline Unstable',
                body: 'The pipeline has completed with unstable results.',
                attachmentsPattern: 'logs.txt'
            )
        }
    }
}
