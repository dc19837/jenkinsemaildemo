pipeline {
    agent any
    stages {
        stage('Create Log') {
            steps {
                script {
                    sh 'echo "Test log content" > test-log.log'
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'test-log.log'
                    mail to: "dzassadcass@gmail.com",
                         subject: "Test Email with Attachment",
                         body: "This is a test email with attachment.",
                         attachLog: true  // or specify files directly
                    // You might need to customize this based on your Jenkins version
                }
            }
        }
    }
}
