pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
            tools {
                maven 'Maven 3.6.0'
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                sh 'mvn test'
            }
            tools {
                junit 'JUnit 4.12'
                selenium 'Selenium 3.14.0'
            }
        }
        stage('Code Analysis') {
            steps {
                sh 'sonar-scanner'
            }
            tools {
                sonarqube 'SonarQube 8.9.0'
            }
        }
        stage('Security Scan') {
            steps {
                sh 'zap-full-scan.py'
            }
            tools {
                owaspzap 'OWASP ZAP 2.11.0'
            }
        }
        stage('Deploy to Staging') {
            steps {
                sh 'ansible-playbook deploy-staging.yml'
            }
            tools {
                ansible 'Ansible 2.10.0'
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                sh 'mvn integration-test'
            }
            tools {
                selenium 'Selenium 3.14.0'
            }
        }
        stage('Deploy to Production') {
            steps {
                sh 'ansible-playbook deploy-production.yml'
            }
            tools {
                ansible 'Ansible 2.10.0'
            }
        }
    }

    post {
        success {
            emailext (
                to: 'dzassadcass@gmail.com',
                subject: 'Pipeline Success - ${STAGE_NAME}',
                body: 'The ${STAGE_NAME} stage has completed successfully.',
                attachmentsPattern: 'logs.txt'
            )
        }
        failure {
            emailext (
                to: 'dzassadcass@gmail.com',
                subject: 'Pipeline Failure - ${STAGE_NAME}',
                body: 'The ${STAGE_NAME} stage has failed.',
                attachmentsPattern: 'logs.txt'
            )
        }
        unstable {
            emailext (
                to: 'dzassadcass@gmail.com',
                subject: 'Pipeline Unstable - ${STAGE_NAME}',
                body: 'The ${STAGE_NAME} stage has completed with unstable results.',
                attachmentsPattern: 'logs.txt'
            )
        }
    }
}
